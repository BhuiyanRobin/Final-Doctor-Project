<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mobileappdevelop.simpledoctor.ShowDoctorDetaile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Doctor Details"
        android:textSize="18dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="17dp"
        android:paddingLeft="20dp"
        android:background="#3f51b5"/>

    <TextView
        android:id="@+id/dp_doctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dr. Rayhan"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30sp"
        android:padding="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Skill :"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dp_doctorSpeciality"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Metting :"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dp_doctorAppointment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Phone :"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dp_doctorPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Email :"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dp_doctorEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"/>

    </LinearLayout>


</LinearLayout>
